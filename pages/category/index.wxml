<!--pages/category/index.wxml-->
<SearchInput></SearchInput>
<view class="cate_container">
  <!-- 左侧菜单 -->
  <scroll-view scroll-y class="left_menu">
    <view class="menu_item {{currentIndex===index?'active':''}}" wx:for="{{leftMenuList}}" wx:key="cat_id" bindtap="handleMenuChange" data-index="{{index}}">
      {{item.cat_name}}
    </view>
  </scroll-view>

  <!-- 右侧菜单的内容 -->
  <scroll-view scroll-y class="right_content">
    <view class="goods_group" wx:for="{{rightGoodsList}}" wx:for-index="index1" wx:for-item="item1" wx:key="item">
      <view class="goods_title">
        <text class="delimiter">/</text>
        <text class="goods_group_title">{{item1.cat_name}}</text>
        <text class="delimiter">/</text>
      </view>

      <view class="goods_list">
        <navigator wx:for="{{item1.children}}" wx:for-index="index2" wx:for-item="item2" wx:key="cat_id">
          <image src="{{item2.cat_icon}}" mode="widthFix"></image>
          <view class="goods_name">{{item2.cat_name}}</view>
        </navigator>
          
      </view>
    </view>
  </scroll-view>
    
</view>
